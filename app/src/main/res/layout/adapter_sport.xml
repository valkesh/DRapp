<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgSportPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <com.dr.app.widgets.CTextViewjustsport
                android:id="@+id/txtSportName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sport name"
                android:textColor="@color/textcolor"
                android:textSize="16dp" />

            <com.dr.app.widgets.CTextViewjustsport
                android:id="@+id/txtSportEventCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="32 events"
                android:textColor="@color/textcolor50transblack"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>