<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnMainView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/editprofile_screen"
    android:gravity="center|top"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_post_image"
                android:maxHeight="@dimen/create_post_image">

                <ImageView
                    android:id="@+id/imgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_post_image"
                    android:background="@drawable/banner"
                    android:maxHeight="@dimen/create_post_image"
                    android:scaleType="centerCrop" />


            </FrameLayout>

            <com.dr.app.widgets.CircleImageView
                android:id="@+id/imgCreaterPics"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="-30dp"
                android:src="@drawable/img_user_preview_details" />

            <com.dr.app.widgets.CTextViewjustsport
                android:id="@+id/txtCreaterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/home_arrow"
                android:gravity="center"
                android:text=""
                android:textColor="#808080"
                android:textSize="15dp"
                customfontdemo:fontName="Roboto-Regular.ttf" />

            <com.dr.app.widgets.CTextViewjustsport
                android:id="@+id/txtSportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_name_bg"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textcolor50transblack"
                android:textSize="14dp"
                customfontdemo:fontName="Roboto-Regular.ttf" />

            <com.dr.app.widgets.CTextViewjustsport
                android:id="@+id/txtSportEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="28dp"
                customfontdemo:fontName="OpenSans-CondBold.ttf" />


            <LinearLayout
                android:id="@+id/lnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/share_icon" />


                <com.dr.app.widgets.CTextViewjustsport
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="SHARE" />


            </LinearLayout>

            <com.dr.app.widgets.CTextViewjustsport
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/event_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="2">

                <com.dr.app.widgets.CTextViewjustsport
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/date_and_time"
                    android:drawablePadding="10dp"
                    android:text="DATE &amp; TIME" />


                <com.dr.app.widgets.CTextViewjustsport
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/player"
                    android:drawablePadding="10dp"
                    android:text="PLAYERS NEEDED" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:weightSum="2">

                <com.dr.app.widgets.CTextViewjustsport
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="0.90"
                    android:background="@drawable/event_line" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10" />


                <com.dr.app.widgets.CTextViewjustsport
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/event_line" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <com.dr.app.widgets.CTextViewjustsport
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:text="00"
                        android:textSize="36dp"
                        customfontdemo:fontName="OpenSans-CondBold.ttf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.dr.app.widgets.CTextViewjustsport
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:textSize="14dp"
                                customfontdemo:fontName="OpenSans-CondBold.ttf" />

                            <com.dr.app.widgets.CTextViewjustsport
                                android:id="@+id/txtMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="14dp"
                                customfontdemo:fontName="OpenSans-CondBold.ttf" />
                        </LinearLayout>

                        <com.dr.app.widgets.CTextViewjustsport
                            android:id="@+id/txtTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="14dp"
                            customfontdemo:fontName="OpenSans-CondBold.ttf" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.dr.app.widgets.CTextViewjustsport
                        android:id="@+id/txtVacancyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="00"
                        android:textSize="36dp"
                        customfontdemo:fontName="OpenSans-CondBold.ttf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.dr.app.widgets.CTextViewjustsport
                            android:id="@+id/txtTotalVacancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="/0"
                            android:textSize="14dp"
                            customfontdemo:fontName="OpenSans-CondBold.ttf" />

                        <com.dr.app.widgets.CTextViewjustsport
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textSize="14dp"
                            customfontdemo:fontName="OpenSans-CondBold.ttf" />
                    </LinearLayout>

                    <GridView
                        android:id="@+id/GridUserPics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center"
                        android:layout_marginLeft="50dp"
                        android:columnCount="3"
                        android:gravity="right|center"
                        android:horizontalSpacing="-20dp"
                        android:numColumns="3"
                        android:orientation="horizontal"
                        android:rowCount="1">

                    </GridView>

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.dr.app.widgets.CTextViewjustsport
                    android:id="@+id/txtDisc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14dp"
                    customfontdemo:fontName="Roboto-Light.ttf" />


            </FrameLayout>


            <com.dr.app.widgets.CTextViewjustsport
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/event_line"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/event_line"
                android:gravity="center"
                android:text="ADDRESS"
                android:textSize="23dp"
                customfontdemo:fontName="OpenSans-CondBold.ttf" />


            <com.dr.app.widgets.CTextViewjustsport
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="17/31 Queen Street, Melborne"
                android:textSize="16dp"
                customfontdemo:fontName="Roboto-Medium.ttf" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_area"
                android:padding="10dp">

                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <com.dr.app.widgets.CButtonViewOpenSans
                android:id="@+id/btnWillJoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_accepted"
                android:text="I WILL JOIN"
                android:textColor="@color/color_black"
                android:textSize="20sp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>